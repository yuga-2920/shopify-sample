{{ 'category.css' | asset_url | stylesheet_tag }}

<section id="category" class="custom-wrapper__{{ section.id }}">
  <div class="category-wrapper">
    {% if section.settings.checkbox %}
      <div class="category-header common-header">
        <h2 class="common-ttl">CATEGORY</h2>
        <p class="common-subttl">商品カテゴリー</p>
      </div>
    {% endif %}
    <div class="category-boxs custom-boxs">
      {% for block in section.blocks %}
        <div class="category-box">
          {% render 'custom-box'
            , collection: block.settings.collection
          %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .custom-wrapper__{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
</style>


{% schema %}
  {
    "name": "CATEGORY",
    "settings": [
      {
        "type": "checkbox",
        "id": "checkbox",
        "label": "タイトルの表示",
        "default": true
      }, {
        "type": "color",
        "id": "background_color",
        "label": "背景色"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "ブロック",
        "limit": 9,
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "表示コレクション"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "CATEGORY"
      }
    ]
  }
{% endschema %}