<div class="common-header custom-wrapper__{{ section.id }}">
  <h2 class="common-ttl">{{ section.settings.title }}</h2>
  <p class="common-subttl">{{ section.settings.sub_title }}</p>
</div>

<style>
  .custom-wrapper__{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
</style>


{% schema %}
  {
    "name": "共通タイトル",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "背景色"
      },
      {
        "type": "text",
        "id": "title",
        "label": "タイトル"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "サブタイトル"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "共通タイトル"
      }
    ]
  }
{% endschema %}