<div id="linebox" class="line-pop when-it-open">
  <div class="line-pop__recommend">
    <p class="line-pop__recommend--comment">LINE登録はコチラ！</p>
  </div>
  <div class="line-pop__logo">
    <a href="#" target="_blank">
      <img src="{{ 'line-icon.png' | asset_url }}">
    </a>
    <p id="lineNotice" class="line-pop__logo--notice no_notice">1</p>
  </div>
</div>

<style>
  .line-pop {
    position: fixed;
    z-index: 400;
    bottom: 30px;
    right: 20px;
    display: flex;
    align-items: center;
    transition: 2s;
    background: rgba(255, 255, 255, 0.8);
    padding: 10px 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .when-it-open {
    bottom: -200px;
  }

  .line-pop__recommend--comment {
    margin: 0;
    margin-right: 10px;
    font-weight: bold;
    display: flex;
    align-items: center;
  }


  .line-pop__logo img {
    text-align: right;
    width: 40px;
    vertical-align: bottom;
  }

  .line-pop__logo--notice {
    position: absolute;
    top: 5px;
    right: 3px;
    margin: 0;
    width: 20px;
    height: 20px;
    font-size: 10px;
    color: #fff;
    background: red;
    border-radius: 50%;
    border: 2px solid #fff;
    color: #fff;
    text-align: center;
    opacity: 1;
    transition: 1s;
  }

  .no_notice {
    opacity: 0;
  }

  @media screen and (max-width: 767px) {
    .line-pop {
      bottom: 45px;
      right: 10px;
      transition: 2s;
      padding: 5px;
    }

    .line-pop img {
      width: 35px;
    }

    .when-it-open {
      bottom: -200px;
    }

    .line-pop__recommend {
      font-size: 14px;
    }

    .line-pop__logo--notice {
      font-size: 10px;
      width: 20px;
      height: 20px;
      color: #fff;
    }
  }
</style>

<script>
  {
    const lineNotice = document.getElementById('lineNotice');
    const lineBox = document.getElementById('linebox');

    const whenopen = function () {
      lineBox.classList.remove('when-it-open');
    };

    const linepop = function () {
      lineNotice.classList.remove('no_notice');
    };

    setTimeout(whenopen, 1000);
    setTimeout(linepop, 4000);

    lineBox.addEventListener('click', () => {
      lineNotice.classList.add('no_notice');
    });
  }
</script>